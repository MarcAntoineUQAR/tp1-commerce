@model TPcommerce.Models.LoginViewModel

@{
var message = TempData["message"];
Layout = "_OuterLayout";
}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
        <h2 class="text-center mb-4">Connexion</h2>

        @if (message != null)
        {
        <div class="alert alert-danger text-center">@message</div>
        }

        <form method="post" asp-action="LoginPost" asp-controller="Login">
            <div class="mb-3">
                <label for="Username" class="form-label">Username</label>
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Entrez votre username", required = "required" })
            </div>

            <div class="mb-3">
                <label for="Password" class="form-label">Password</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Entrez votre mot de passe", required = "required" })
            </div>

            <button type="submit" class="btn btn-warning w-100">Se connecter</button>
        </form>

        <div class="text-center mt-3">
            <a href="/register" class="btn btn-link">Se cr√©er un nouveau compte</a>
        </div>
    </div>
</div>
