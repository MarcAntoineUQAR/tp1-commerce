<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TPcommerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TPcommerce.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #FFC107;">
            <div class="container-fluid">
                <a class="navbar-brand text-dark fw-bold" asp-area="" asp-controller="Home" asp-action="Index">IGA 2</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    @{
                        var role = Context.Session.GetString("Role");
                    }
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold" asp-area="" asp-controller="User" asp-action="Index">Mon profil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold" asp-area="" asp-controller="Products" asp-action="Index">Parcourir les produits</a>
                        </li>

                        @if (role != "seller")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-semibold" asp-area="" asp-controller="ShoppingCart" asp-action="Index">
                                    <i class="bi bi-cart"></i> Panier
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-semibold" asp-area="" asp-controller="TransactionHistory" asp-action="Index">
                                    <i class="bi bi-clock-history"></i> Mes achats
                                </a>
                            </li>
                        }

                        @if (role == "seller")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-semibold" asp-area="" asp-controller="Sales" asp-action="Index">
                                    <i class="bi bi-graph-up"></i> Mes ventes
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-danger fw-semibold" asp-area="" asp-controller="Login" asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i> Déconnexion
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center p-3" style="background-color: #FFD54F;">
        <div class="container">
            Fait par Marc-Antoine Leblond et Simon Drolet.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
