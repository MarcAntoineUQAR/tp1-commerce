@model List<TPcommerce.Models.Product>
@{
    var userRole = TempData.Peek("Role");
    var message = TempData["message"];
}

@if (message != null)
{
    <div class="alert alert-danger mt-2 text-center alert-dismissible fade show" role="alert">
        @message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-4">
    <h2 class="text-center mb-4 text-warning fw-bold">üõçÔ∏è Liste des Produits</h2>

    <div class="mb-3 d-flex align-items-center">
        <form method="get" asp-action="Index" asp-controller="Products">
            <input type="text" name="searchTerm" class="form-control w-75" placeholder="üîé Rechercher"/>
        </form>

        <div class="ms-auto">
            <form method="get" asp-controller="Products" asp-action="GetAddProduct">
                <button type="submit" class="btn btn-warning fw-bold @(userRole?.ToString() == "seller" ? "" : "disabled")" aria-label="Ajouter un produit">
                    <i class="bi bi-plus-circle"></i> Ajouter un produit
                </button>
            </form>
        </div>
    </div>

    @foreach (var product in Model)
    {
        <div class="card mb-4 shadow-lg border-0">
            <div class="row g-0">
                <!-- Left: Product Image -->
                <div class="col-md-4 d-flex align-items-center bg-light">
                    <img src="@product.Image" class="img-fluid rounded-start" alt="@product.Title"
                         style="max-height: 200px; object-fit: cover; width: 100%;">
                </div>

                <!-- Right: Product Details -->
                <div class="col-md-8">
                    <div class="card-body">
                        <h3 class="card-title fw-bold text-warning">@product.Title</h3>
                        <h5 class="text-muted">Cat√©gorie: <span class="text-dark">@product.Category</span></h5>
                        <p class="text-secondary">@product.Description</p>
                        <h5 class="fw-bold text-success">üí∞ Prix: @product.Price $</h5>

                        <div class="d-flex align-items-center mt-3">
                            <input type="number" class="form-control me-2" min="1" value="1" style="width: 80px;">
                            <button class="btn btn-warning fw-bold">
                                <i class="bi bi-cart-plus"></i> Ajouter au panier
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (Model.Count <= 0)
    {
        <h3 class="text-center">Il n'y a rien ici ü•¥</h3>
        <div class="text-center">
            <a href="/products" class="btn btn-link text-decoration-none">Retour</a>
        </div>
    }
</div>
